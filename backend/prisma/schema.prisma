generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(50)
  firstName String   @map("first_name") @db.VarChar(20)
  lastName  String   @map("last_name") @db.VarChar(20)
  password  String   @db.VarChar(120)
  admin     Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  sessions  SessionParticipation[]

  @@map("users")
}

model Teacher {
  id        Int      @id @default(autoincrement())
  firstName String   @map("first_name") @db.VarChar(20)
  lastName  String   @map("last_name") @db.VarChar(20)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  sessions  Session[]

  @@map("teachers")
}

model Session {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(50)
  date        DateTime  @db.Date
  description String    @db.VarChar(2500)
  teacherId   Int       @map("teacher_id")
  teacher     Teacher   @relation(fields: [teacherId], references: [id])
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  participants SessionParticipation[]

  @@map("sessions")
}

model SessionParticipation {
  sessionId Int     @map("session_id")
  userId    Int     @map("user_id")
  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([sessionId, userId])
  @@map("PARTICIPATE")
}
